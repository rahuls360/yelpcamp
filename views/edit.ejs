<% include partials/header  %>

  <div class="container">
    <h3 class="text-center">Add your campground</h3>
    <div class="form-group" style="width: 30%; margin: 0 auto;">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" required placeholder="Enter Name" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="img" required placeholder="Enter Image Link" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" required placeholder="Enter Description" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <input class="btn btn-primary btn-lg btn-block" type="submit">
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>

  </div>

  <% include partials/footer  %>